                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
